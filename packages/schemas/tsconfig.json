{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
